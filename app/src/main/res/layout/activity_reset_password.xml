<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_border_background"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp">

        <TextView
            android:id="@+id/txt_resetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/etxt_newpassword"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_border_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_resetpassword"
            android:layout_marginTop="30dp"
            android:hint="Email or Password"
            android:textSize="12dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_expresspassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="           Please type your Email or
Phone Number to reset your Password!"
            android:layout_below="@id/etxt_newpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_border_background"
            android:layout_centerHorizontal="true"
            android:text="Done"
            android:layout_below="@id/txt_expresspassword"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</LinearLayout>
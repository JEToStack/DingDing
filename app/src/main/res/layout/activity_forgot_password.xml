<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_border_background"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp">

        <TextView
            android:id="@+id/txt_forgotpasswordContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_expressemailorPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="          Please type your Email or
Phone Number to reset your Password!"
            android:layout_below="@id/txt_forgotpasswordContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/etxt_emailorphoneforgotpassword"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_border_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_expressemailorPhoneNumber"
            android:inputType="text"
            android:layout_marginTop="30dp"
            android:hint="Email or PhoneNumber"
            android:textSize="12dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_border_background"
            android:layout_alignParentRight="true"
            android:text="Send"
            android:layout_below="@id/etxt_emailorphoneforgotpassword"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"/>

    </RelativeLayout>

</LinearLayout>
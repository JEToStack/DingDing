<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/user_profile_pic"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#32f7a94a">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Profile"
            android:textColor="#ffff"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_more_vert"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_gradient_bg"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Jeto"
            android:textColor="#ffff"/>

        <ImageView
            android:id="@+id/online_icon_profile"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/username_profile"
            android:src="@drawable/ic_online_status"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/online_input_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/online_icon_profile"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:text="Online"
            android:textColor="#ffff" />
        <LinearLayout
            android:id="@+id/user_profile_basic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/username_profile"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/location_icon_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_location"/>
            <TextView
                android:id="@+id/location_input_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phnom Penh"
                android:textColor="#ffff"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
            <ImageView
                android:id="@+id/age_icon_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_date"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/age_input_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="#ffff"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
            <ImageView
                android:id="@+id/occupation_icon_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_occupation"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/occupation_input_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phnom Penh"
                android:textColor="#ffff"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/user_interest_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest"
            android:textColor="#ffffff"
            android:layout_below="@+id/user_profile_basic_info"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/user_interest_profile_title"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Travel"
                android:textColor="#ffffff"
                android:background="@drawable/custom_border_interest_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/custom_border_interest_bg"
                android:elevation="0dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="Music"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Photography"
                android:textColor="#ffffff"
                android:background="@drawable/custom_border_interest_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_add_circle"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>